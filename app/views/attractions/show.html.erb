<% if flash[:message] %>
  <p><%= flash[:message] %></p>
<% end %>

<% if current_user.admin %>
  <%= render @attraction %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
  <%= render @attraction %>
  <%= form_for(@attraction, url: ride_path(@attraction), method: :post) do |f| %>
    <%= f.submit 'Go on this ride' %>
  <% end %>
<% end %>
